page {
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80%;
}
.form {
  /* margin: 300rpx auto 0; */
  width: 700rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
}
input {
  flex: 4;
  border-radius: 10rpx;
  font-size: 14px;
  background-color: #fff;
  border: 1px solid #dcdfe6;
  box-sizing: border-box;
  color: #606266;
  height: 100rpx;
  line-height: 100rpx;
  outline: none;
  padding: 0 15px;
}
.placeholder-class {
  color: #606266;
  font-size: 14px;
}
button {
  flex: 1;
  margin-left: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0;
  font-size: 14px;
  color: #fff;
  background-color: #409eff;
  border-color: #409eff;
}
.history-container{
  margin-top: 20rpx;
  border-top: 1px solid #dcdfe6;
  width:100%;
  font-size: 14px;
}
.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 20rpx;
  padding: 20rpx;
}
.history-text {
  flex: 8;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}
.history-border{
  border-bottom: 1px solid rgb(241,241,241);
}
.history-icon {
  flex: 1;
  vertical-align: middle;
}
