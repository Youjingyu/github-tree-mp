<view class="container">
  <view hidden="{{!noData}}" class="no-data"><text>没有匹配的结果</text></view>
  <view wx:for="{{list}}" wx:key="{{index}}"
    bindtap="choose"
    data-repos="{{item.html_url}}" class="row">
    <view class="left">
      <view><text class="name">{{item.full_name}}</text></view>
      <view><text class="description">{{item.description}}</text></view>
      <view><text class="update">Updated on {{item.updated_at}}</text></view>
    </view>
    <view class="center">
      <text>{{item.language}}</text>
    </view>
    <view class="right">
      <image src="../../assets/imgs/star.png" class="star"></image>
      <text>{{item.stargazers_count}}</text>
    </view>
  </view>
  <view class="weui-loadmore" hidden="{{!loadMore}}">
    <view class="weui-loading"></view>
    <view class="weui-loadmore__tips">正在加载</view>
  </view>
</view>