  flex: 1;
  text-align: center;
}
.sidebar-icon{
  width: 45rpx;
  height: 36rpx;
}
.header-title{
  flex: 5;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}
.container{
