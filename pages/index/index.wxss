.sidebar-back{
  position: absolute;
  top: 70rpx;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #618F9F;
  opacity: 0.5;
}
.sidebar{
  /* height: 100%; */
  overflow: auto;
  position: absolute;
  left: 0;
  top: 70rpx;
  bottom: 0;
  max-width: 600rpx;
  min-width: 450rpx;
  padding: 30rpx 0;
  /* border-right:1px solid #ccc; */
  /* border-top:1px solid #ccc; */
  /* height: 100%; */
  background: #044C65;
  z-index: 999;
  box-sizing:border-box;
  transform: translate3d(-600rpx, 0rpx, 0rpx);
  transition: transform 0.2s ease 0s;
}
.show-sidebar {
  transform: translate3d(0rpx, 0rpx, 0rpx);
}
.sidebar-title {
  color: #fff;
  font-size: 40rpx;
  margin: 0 30rpx;
}
.sidebar-head {
  display: flex;
  padding: 25rpx 30rpx;
  justify-content: space-between;
  align-items:center;
  font-size: 35rpx;
  border-bottom: 1px solid #04485D;
}
.start-icon {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle
}
.fork-container{
  margin-top: 10rpx;
}
.fork-icon{
  width:  35rpx;
