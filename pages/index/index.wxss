page {
  height: 100%;
}
.header{
  direction: flex;
  position: absolute;
  display: flex;
  align-items: center;
  top: 0;
  left: 0;
  right: 0;
  height: 70rpx;
  /* border-bottom: 1px solid #ccc; */
